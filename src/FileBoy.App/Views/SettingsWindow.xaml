<Window x:Class="FileBoy.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FileBoy.App.ViewModels"
        mc:Ignorable="d"
        Title="Settings" 
        Height="500" 
        Width="750"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        d:DataContext="{d:DesignInstance vm:SettingsViewModel}">
    
    <Window.Resources>
        <!-- Category ListBox Item Style -->
        <Style x:Key="CategoryItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" 
                                Background="Transparent" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                Margin="4,2">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Sidebar - Categories -->
        <Border Grid.Column="0" Background="#EFEFEF" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Search Box -->
                <Border Grid.Row="0" Margin="8" Background="White" CornerRadius="4" BorderBrush="#CCC" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ”" Grid.Column="0" VerticalAlignment="Center" Margin="8,0,4,0" FontSize="12"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 Padding="4,8"
                                 Background="Transparent"/>
                        <TextBlock Grid.Column="1" 
                                   Text="Search settings..." 
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Foreground="#888"
                                   Margin="4,0,0,0"
                                   Padding="4,8">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <!-- Category List -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{StaticResource CategoryItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
        
        <!-- Right Panel - Settings Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Padding="20,16" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                <TextBlock Text="{Binding SelectedCategory.Name}" FontSize="20" FontWeight="SemiBold"/>
            </Border>
            
            <!-- Settings List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,10">
                <ItemsControl ItemsSource="{Binding FilteredSettings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    CornerRadius="6" 
                                    Padding="16" 
                                    Margin="0,0,0,12"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Setting Name -->
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding Name}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,4"/>
                                    
                                    <!-- Setting Description -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding Description}" 
                                               FontSize="12" 
                                               Foreground="#666"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,12"/>
                                    
                                    <!-- Setting Control -->
                                    <ContentControl Grid.Row="2" Content="{Binding}">
                                        <ContentControl.Resources>
                                            <DataTemplate x:Key="EnumTemplate">
                                                <ComboBox Width="200" HorizontalAlignment="Left"
                                                          ItemsSource="{Binding DataContext.StartupModeValues, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          SelectedItem="{Binding DataContext.StartupMode, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                            </DataTemplate>
                                            <DataTemplate x:Key="SliderTemplate">
                                                <StackPanel Orientation="Horizontal">
                                                    <Slider Width="200" 
                                                            Minimum="{Binding MinValue}" 
                                                            Maximum="{Binding MaxValue}"
                                                            Value="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            TickFrequency="10"
                                                            IsSnapToTickEnabled="True"/>
                                                    <TextBlock Text="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}, StringFormat={}{0}px}" 
                                                               VerticalAlignment="Center" 
                                                               Margin="12,0,0,0"
                                                               MinWidth="50"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ContentControl.Resources>
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="Enum">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource EnumTemplate}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Slider">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource SliderTemplate}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Footer Buttons -->
            <Border Grid.Row="2" Padding="20,12" BorderBrush="#DDD" BorderThickness="0,1,0,0" Background="#FAFAFA">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset to Defaults" 
                            Command="{Binding ResetToDefaultsCommand}"
                            Padding="16,8"
                            Margin="0,0,12,0"
                            Background="White"
                            BorderBrush="#CCC"/>
                    <Button Content="Save" 
                            Command="{Binding SaveCommand}"
                            Padding="20,8"
                            Background="#0078D4"
                            Foreground="White"
                            BorderThickness="0"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
