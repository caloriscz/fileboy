<Window x:Class="FileBoy.App.Views.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rename" 
        Height="380" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#f5f5f5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Rename Item" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>
        
        <!-- Current Name -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="Current name:" 
                       Margin="0,0,0,8"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#333"/>
            
            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Padding="12"
                    CornerRadius="3"
                    MaxHeight="100">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="CurrentNameTextBlock"
                               FontSize="14"
                               FontWeight="Medium"
                               TextWrapping="Wrap"
                               ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- New Name Input -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="New name:" 
                       Margin="0,0,0,8"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#333"/>
            
            <TextBox x:Name="NewNameTextBox"
                     Grid.Row="1"
                     Height="40"
                     Padding="12,10"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"/>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Rename" 
                    Width="80" 
                    Height="32"
                    IsDefault="True"
                    Click="RenameButton_Click"
                    Margin="0,0,10,0"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0078D4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Content="Cancel" 
                    Width="80" 
                    Height="32"
                    IsCancel="True"
                    Click="CancelButton_Click"
                    Background="#E1E1E1"
                    Foreground="Black"
                    BorderBrush="#ADADAD"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#E1E1E1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
