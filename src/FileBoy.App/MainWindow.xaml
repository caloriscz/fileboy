<Window x:Class="FileBoy.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FileBoy" 
        Height="700" 
        Width="1100"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#f0f0f0" Padding="2">
            <MenuItem Header="_File">
                <MenuItem Header="_Refresh" Click="Refresh_Click" InputGestureText="F5"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_List View" Click="ListView_Click"/>
                <MenuItem Header="_Thumbnail View" Click="ThumbnailView_Click"/>
            </MenuItem>
            <MenuItem Header="_Options"/>
            <MenuItem Header="_Help">
                <MenuItem Header="_About FileBoy"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Frame for Page Navigation -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
