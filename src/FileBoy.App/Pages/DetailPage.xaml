<Page x:Class="FileBoy.App.Pages.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:FileBoy.App.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Image Viewer"
      Background="#1e1e1e"
      d:DataContext="{d:DesignInstance vm:DetailViewModel}">
    
    <Page.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding GoBackToBrowserCommand}"/>
        <KeyBinding Key="Back" Command="{Binding GoBackToBrowserCommand}"/>
        <KeyBinding Key="Backspace" Command="{Binding GoBackToBrowserCommand}"/>
        <KeyBinding Key="PageUp" Command="{Binding PreviousCommand}"/>
        <KeyBinding Key="PageDown" Command="{Binding NextCommand}"/>
        <KeyBinding Key="Left" Command="{Binding SeekBackwardCommand}"/>
        <KeyBinding Key="Right" Command="{Binding SeekForwardCommand}"/>
        <KeyBinding Key="Add" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Key="OemPlus" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Key="Subtract" Command="{Binding ZoomOutCommand}"/>
        <KeyBinding Key="OemMinus" Command="{Binding ZoomOutCommand}"/>
        <KeyBinding Key="D0" Command="{Binding ZoomFitCommand}"/>
        <KeyBinding Key="NumPad0" Command="{Binding ZoomFitCommand}"/>
    </Page.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Background="#2d2d2d" ToolBarTray.IsLocked="True">
            <Button Command="{Binding GoBackToBrowserCommand}" ToolTip="Back to Browser (Escape)" Padding="8,4">
                <TextBlock Text="â† Back" FontSize="12" Foreground="White"/>
            </Button>
            <Separator/>
            <Button Command="{Binding PreviousCommand}" ToolTip="Previous File (Page Up)" Padding="8,4">
                <TextBlock Text="â—€" FontSize="14" Foreground="White"/>
            </Button>
            <Button Command="{Binding NextCommand}" ToolTip="Next File (Page Down)" Padding="8,4">
                <TextBlock Text="â–¶" FontSize="14" Foreground="White"/>
            </Button>
            <Separator Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Command="{Binding ZoomOutCommand}" 
                    ToolTip="Zoom Out (-)" 
                    Padding="8,4"
                    Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="âˆ’" FontSize="16" Foreground="White"/>
            </Button>
            <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:P0}}" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="8,0"
                       MinWidth="50"
                       TextAlignment="Center"
                       Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Command="{Binding ZoomInCommand}" 
                    ToolTip="Zoom In (+)" 
                    Padding="8,4"
                    Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="+" FontSize="16" Foreground="White"/>
            </Button>
            <Button Command="{Binding ZoomFitCommand}" 
                    ToolTip="Fit to Window (0)" 
                    Padding="8,4"
                    Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="âŠ¡" FontSize="14" Foreground="White"/>
            </Button>
            
            <!-- Image-only controls -->
            <Separator Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Command="{Binding ToggleCropModeCommand}" 
                    ToolTip="Toggle Crop Mode" 
                    Padding="8,4"
                    Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCropMode}" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <TextBlock Text="âœ‚ Crop" FontSize="12" Foreground="White"/>
            </Button>
            <Button Command="{Binding CropImageCommand}" 
                    IsEnabled="{Binding HasCropSelection}"
                    ToolTip="Apply Crop" 
                    Padding="8,4"
                    Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="âœ“ Apply" FontSize="12" Foreground="White"/>
            </Button>
            <Separator Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Command="{Binding ResizeImageCommand}" 
                    ToolTip="Resize Image" 
                    Padding="8,4"
                    Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="â‡” Resize" FontSize="12" Foreground="White"/>
            </Button>
            <Separator Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Menu Background="Transparent" 
                  VerticalAlignment="Center"
                  Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}">
                <MenuItem Header="View" Foreground="White" Padding="8,4">
                    <MenuItem Header="Original Size (100%)" 
                              Command="{Binding SetDisplayModeCommand}"
                              CommandParameter="Original"/>
                    <MenuItem Header="Fit to Screen" 
                              Command="{Binding SetDisplayModeCommand}"
                              CommandParameter="FitToScreen"/>
                    <MenuItem Header="Fit if Larger" 
                              Command="{Binding SetDisplayModeCommand}"
                              CommandParameter="FitIfLarger"/>
                </MenuItem>
            </Menu>
        </ToolBar>
        
        <!-- Content Display Area -->
        <Grid Grid.Row="1" Background="#1e1e1e">
            <!-- Image Display -->
            <ScrollViewer x:Name="ImageScrollViewer"
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"
                          PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}"/>
                    </Grid.LayoutTransform>
                    
                    <Image x:Name="MainImage"
                           Source="{Binding ImageSource}"
                           Stretch="None"
                           RenderTransformOrigin="0.5,0.5"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           MouseLeftButtonDown="Image_MouseLeftButtonDown"
                           MouseMove="Image_MouseMove"
                           MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
                    
                    <!-- Crop Selection Rectangle -->
                    <Canvas x:Name="CropCanvas"
                            Background="Transparent"
                            IsHitTestVisible="False"
                            Visibility="{Binding IsCropMode, Converter={StaticResource BoolToVisibilityConverter}}"
                            Width="{Binding ActualWidth, ElementName=MainImage}"
                            Height="{Binding ActualHeight, ElementName=MainImage}">
                        
                        <!-- Selection rectangle -->
                        <Rectangle x:Name="SelectionRect"
                                   Stroke="Yellow"
                                   StrokeThickness="1"
                                   StrokeDashArray="5,3"
                                   Fill="#10FFFF00"
                                   Visibility="Collapsed"/>
                    </Canvas>
                </Grid>
            </ScrollViewer>
            
            <!-- Video Display -->
            <Grid Visibility="{Binding IsVideo, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <MediaElement x:Name="VideoPlayer"
                              Grid.Row="0"
                              Source="{Binding FilePath}"
                              LoadedBehavior="Pause"
                              UnloadedBehavior="Stop"
                              ScrubbingEnabled="True"
                              Volume="0"
                              Stretch="Uniform"
                              MouseLeftButtonDown="VideoPlayer_MouseLeftButtonDown"
                              MediaOpened="VideoPlayer_MediaOpened"
                              MediaFailed="VideoPlayer_MediaFailed"/>
                
                <!-- Video Controls -->
                <Border Grid.Row="1" 
                        Background="#2d2d2d" 
                        Padding="10,8"
                        BorderBrush="#404040" 
                        BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Progress Slider -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding VideoPosition, StringFormat='{}{0:mm\\:ss}'}"
                                       Foreground="#aaa"
                                       VerticalAlignment="Center"
                                       FontSize="11"/>
                            
                            <Slider x:Name="VideoProgressSlider"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="{Binding VideoDuration.TotalSeconds}"
                                    Value="{Binding VideoPosition.TotalSeconds, Mode=OneWay}"
                                    VerticalAlignment="Center"
                                    Margin="8,0"
                                    PreviewMouseDown="VideoProgressSlider_PreviewMouseDown"
                                    PreviewMouseUp="VideoProgressSlider_PreviewMouseUp"
                                    ValueChanged="VideoProgressSlider_ValueChanged"
                                    IsMoveToPointEnabled="True"
                                    Height="20"/>
                            
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding VideoDuration, StringFormat='{}{0:mm\\:ss}'}"
                                       Foreground="#aaa"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontSize="11"/>
                        </Grid>
                        
                        <!-- Playback Buttons and Volume -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Playback Controls (Left) -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                                <Button x:Name="PlayPauseButton"
                                        Content="â–¶ Play" 
                                        Width="90" 
                                        Height="32"
                                        Margin="5,0"
                                        Click="PlayPauseButton_Click"
                                        Background="#0078D4"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                                <Button Content="â¹ Stop" 
                                        Width="70" 
                                        Height="32"
                                        Margin="5,0"
                                        Click="StopButton_Click"
                                        Background="#555"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>
                            
                            <!-- Volume Controls (Right) -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                <Button x:Name="MuteButton"
                                        Content="ðŸ”Š" 
                                        Width="40" 
                                        Height="32"
                                        Margin="5,0"
                                        Click="MuteButton_Click"
                                        Background="#555"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontSize="16"/>
                                <Slider x:Name="VolumeSlider"
                                        Width="100"
                                        Minimum="0"
                                        Maximum="1"
                                        Value="1"
                                        VerticalAlignment="Center"
                                        Margin="5,0"
                                        ValueChanged="VolumeSlider_ValueChanged"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Unsupported File Display -->
            <Grid Visibility="{Binding IsUnsupportedFile, Converter={StaticResource BoolToVisibilityConverter}}"
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Not supported file type" 
                               FontSize="20" 
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <Button Command="{Binding OpenInAssociatedAppCommand}"
                            Content="Open in Associated Application" 
                            Width="250" 
                            Height="40"
                            Background="#0078D4"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#2d2d2d">
            <StatusBarItem>
                <TextBlock Text="{Binding FileName}" Foreground="#aaa"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectionInfo}" Foreground="#FFA500" Margin="20,0,0,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding ImageInfo}" Foreground="#aaa"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
